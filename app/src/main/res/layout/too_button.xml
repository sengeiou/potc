<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00000000">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00000000">

            <TextView
                android:id="@+id/btn1"
                android:layout_width="80dp"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_green2"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/button_detial"
                android:textColor="@color/toolBarBgColor"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/btn2"
                android:layout_width="80dp"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/btn1"
                android:background="@drawable/btn_red2"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/button_more"
                android:textColor="#ef7575"
                android:textSize="17dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>