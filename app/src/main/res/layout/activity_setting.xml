<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/toolBarBgColor">

        <RelativeLayout
            android:id="@+id/layertitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:background="#00000000">

            <ImageView
                android:id="@+id/imgsetting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/tool_setting"
                />.

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/imgsetting"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/setting_title_all"
                android:textColor="@color/white"
                android:textSize="25dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layerback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:background="#00000000">

            <ImageView
                android:id="@+id/imgback"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                />.

            <TextView
                android:id="@+id/titleback"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/imgback"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/setting_title_back"
                android:textColor="@color/white"
                android:textSize="25dp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/teb"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_bar"
        android:background="#f5f5f6"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/teb_head"
            android:layout_width="399dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/teb_head_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/setting_title"
                android:textColor="@color/textclolr_title_blcak"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#f5f5f6"/>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="399dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/teb_head"
            android:background="#ffffff">
            <LinearLayout
                android:id="@+id/list_teb"
                android:layout_width="399dp"
                android:layout_height="wrap_content"
                android:background="#f5f5f6"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/tab_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_bar"
        android:layout_toRightOf="@+id/teb"
        android:background="@color/white"></RelativeLayout>

</RelativeLayout>
